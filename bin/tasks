#!/usr/bin/python

from sqlite3 import dbapi2 as sqlite
from optparse import OptionParser

parser = OptionParser()
parser.add_option("-s", "--status", dest="status",
                  help="Only show tasks with this status")
parser.add_option("-i", "--id", dest="id",
                  help="Only show tasks associated with this task id")

(options, args) = parser.parse_args()

t=[]
sql = "select * from task where _id > '0'"
if options.status != None:
	sql = sql+"and status=?"
	t.append(options.status)
if options.id != None:
	sql = sql+"and _id=? or parentId=?"
	t.append(options.id)
	t.append(options.id)

#conn = sqlite.connect('todo')
#c = conn.cursor()
#c.execute(sql,t)
#for row in c:
#	print rowconn = sqlite.connect('todo')

conn = sqlite.connect('todo')
conn.row_factory = sqlite.Row
c = conn.cursor()
c.execute(sql,t)
for r in c:
	pid = r['parentId']
	if pid==None:
		pid=""
	if options.status == None:
		print "%5s %5s %-10s %-50s" % (r['_id'],pid,r['status'],r['name'])
	else:
		print "%5s %5s %-50s" % (r['_id'],pid,r['name'])
